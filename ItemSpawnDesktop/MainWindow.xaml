<Window x:Class="ItemSpawnDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItemSpawnDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300" ResizeMode="NoResize" WindowStyle="ToolWindow" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="btnSword" Content="Elven Sword of Blizzards" Width="100" Margin="10" Click="btnSword_Click"/>
            <Button Name="btnBow" Content="Ebony Bow of Fire" Width="100" Margin="10" Click="btnBow_Click"/>
            <TextBox Name="txtSpawnAmount" Width="100" Margin="10" Text="1" Visibility="Collapsed"/>
            <Button Name="btnSpawnIt" Content="Spawn it!" Width="100" Margin="10" Click="btnSpawnIt_Click" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
